<h1>New game</h1>

<div class="letters">
  <%@letters.each do |letter|%>
   <li><%= letter%></li>
  <%end%>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="guess" placeholder="Your guess?">
  <input type="submit" value='Play'>
</form>
